{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "build/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
